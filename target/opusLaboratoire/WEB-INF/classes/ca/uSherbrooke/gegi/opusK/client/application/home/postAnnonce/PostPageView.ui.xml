                            </g:HTML>
                        </b:ModalBody>
                        <b:ModalFooter>
                            <b:Button type="DANGER" dataDismiss="MODAL">Accepter</b:Button>
                        </b:ModalFooter>
                    </b:Modal>
                    <b:Button dataTarget="#myModal" dataToggle="MODAL" type="PRIMARY" size="SMALL" addStyleNames="col-lg-offset-4">Conditions d'utilisation</b:Button>



                    <b:FormGroup>

                        <g:FlowPanel addStyleNames="col-lg-offset-6 col-lg-7">
                            <b:Button ui:field="submitButton">Envoyer</b:Button>

                        </g:FlowPanel>
                    </b:FormGroup>
                </b:FieldSet>
            </b:Form>
        </div>

    </g:HTMLPanel>

</ui:UiBinder>
